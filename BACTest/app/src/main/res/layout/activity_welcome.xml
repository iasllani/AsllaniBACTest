<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context="com.example.iasll.bac.Welcome">


    <TextView
        android:id="@+id/introTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:text="Which Did You Consume?"
        android:textColor="#470431"
        android:textSize="36sp" />

    <Button
        android:id="@+id/beerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="4"
        android:text="Beer" />

    <Button
        android:id="@+id/wineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="5"
        android:text="Wine" />

    <Button
        android:id="@+id/liquorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="6"
        android:text="Liquor" />

    <ImageView
        android:id="@+id/alcBev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alcoholicbev" />
</android.widget.GridLayout>
